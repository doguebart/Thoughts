<div class="content">
  <div class="title-container">
    <h1 id="register-title">Dashboard</h1>
    <a href="/thoughts/add" class="criar-pensamento-btn">Criar pensamentos</a>
  </div>
  <div class="text-border">
    <div class="border"></div>
    <h2>Seus pensamentos</h2>
  </div>
  <ul class="thought-list">
    {{#each thoughts}}
      <li>
        <span>{{this.title}}</span>
        <div class="actions">
          <a href="/"><i class="bi bi-pencil-square" id="edit"></i></a>

          <form action="/thoughts/remove" method="POST">
            <input type="hidden" name="id" value="{{this.id}}" />
            <button type="submit" class="trash-icon-button">
              <i class="bi bi-trash" id="delete"></i>
            </button>
          </form>
        </div>
      </li>
    {{/each}}
  </ul>
  {{#if emptyThoughts}}
    <p>Ainda não há nenhum pensamento, crie um
      <a href="/thoughts/add">aqui</a></p>
  {{/if}}
</div>