<div class="home-header">
  {{#if search}}
    <h1 id="home-title">Buscando por: <span>{{search}}</span></h1>
    {{#if thoughtsQty}}
      <p>
        <span class="qty">{{thoughtsQty}}</span>
        pensamentos encontrados</p>
    {{else}}
      <p>Nenhum pensamento foi encontrado para o termo:
        <span class="qty">{{search}}</span></p>
    {{/if}}
  {{else}}
    <h1 id="home-title">Conhe√ßa alguns de nossos pensamentos</h1>
  {{/if}}
  <form action="/" method="GET" class="search-form">
    <input type="text" name="search" placeholder="Buscar" id="input-search"/>
    <input type="submit" value="Buscar" id="btn-search"/>
  </form>
  <div class="order-container">
    <span>Ordenar por:</span>

    <div class="order-actions">
      <form action="/" method="GET">
        <input type="hidden" name="search" value="{{this.search}}" />
        <input type="hidden" name="order" value="new" />
        <button type="submit"><i class="bi bi-arrow-up"></i></button>
      </form>

      <form action="/" method="GET">
        <input type="hidden" name="search" value="{{this.search}}" />
        <input type="hidden" name="order" value="old" />
        <button type="submit"><i class="bi bi-arrow-down"></i></button>
      </form>
      <a href="/"><i class="bi bi-eraser eraser"></i></a>
    </div>
  </div>
</div>

<div class="thoughts-container">
  {{#each thoughts}}
    <figure>
      <blockquote>
        "{{this.title}}"
      </blockquote>
      <figcaption>
        <span>{{this.User.name}}</span>
      </figcaption>
    </figure>
  {{/each}}
</div>